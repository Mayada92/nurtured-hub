---
interface Props {
  name: string;
  title: string;
  image?: string;
  lang: 'en' | 'ar';
}

const { name, title, image, lang } = Astro.props;
---

<header class="profile-header">
  {image && (
    <div class="profile-header__image">
      <img
        src={image}
        alt={name}
        width="200"
        height="200"
        loading="eager"
      />
    </div>
  )}
  <div class="profile-header__content">
    <h1>{name}</h1>
    <p class="profile-header__title">{title}</p>
  </div>
</header>

<style>
  .profile-header {
    display: flex;
    align-items: center;
    gap: var(--space-6);
    padding-block: var(--space-8);
    margin-block-end: var(--space-8);
    border-block-end: 2px solid var(--color-accent-4);
  }

  .profile-header__image {
    flex-shrink: 0;
  }

  .profile-header__image img {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    box-shadow: var(--shadow-lg);
    border: 4px solid var(--color-accent-4);
  }

  .profile-header__content {
    flex: 1;
  }

  .profile-header h1 {
    margin-block-end: var(--space-2);
    font-size: 2.5rem;
  }

  .profile-header__title {
    font-size: 1.25rem;
    color: var(--color-muted-ink);
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .profile-header {
      flex-direction: column;
      text-align: center;
    }

    .profile-header__image img {
      width: 150px;
      height: 150px;
    }

    .profile-header h1 {
      font-size: 2rem;
    }
  }
</style>
