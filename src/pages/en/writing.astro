---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import SectionReveal from '../../components/SectionReveal';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('posts'))
  .filter((p) => p.data.lang === 'en');

// Sort posts: nurtured-mind-intro first, then by date
const posts = allPosts.sort((a, b) => {
  // Put nurtured-mind-intro first
  if (a.slug === 'nurtured-mind-intro-en') return -1;
  if (b.slug === 'nurtured-mind-intro-en') return 1;
  // Then sort by date (newest first)
  return b.data.date.getTime() - a.data.date.getTime();
});
---

<BaseLayout title="Writing" description="Articles, blog posts, and written works" lang="en">
  <section class="section">
    <div class="container">
      <SectionReveal client:load>
        <h1>Writing</h1>
        <p>Thoughts, articles, and reflections on various topics.</p>
      </SectionReveal>
      <div class="grid grid--posts">
        {posts.map((post, i) => (
          <SectionReveal client:load delay={i * 0.1}>
            <PostCard post={post} />
          </SectionReveal>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  :global(body)::before {
    content: '';
    position: fixed;
    inset: 0;
    background-image: url('/images/background/background6.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    opacity: 0.2;
    z-index: -1;
    pointer-events: none;
  }

  .section {
    padding-block: var(--space-8);
  }

  .grid {
    display: grid;
    gap: var(--space-6);
    margin-block-start: var(--space-6);
  }

  .grid--posts {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }
</style>



