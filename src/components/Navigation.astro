---
import LanguageSwitcher from './LanguageSwitcher.astro';
import Icon from './Icon.astro';
import { getLanguageFromPath, getBasePath } from '../utils/path';

const base = getBasePath();
const currentPath = Astro.url.pathname;
const lang = getLanguageFromPath(currentPath);
const langPrefix = lang === 'ar' ? '/ar' : '/en';

const navItems = {
  en: [
    { label: 'Home', href: `${base}${langPrefix}/`.replace(/\/+/g, '/'), icon: 'home' },
    { label: 'My Story', href: `${base}${langPrefix}/about`.replace(/\/+/g, '/'), icon: 'sparkles' },
    { label: 'Profiles', href: `${base}${langPrefix}/profile`.replace(/\/+/g, '/'), icon: 'user' },
    { label: 'Projects', href: `${base}${langPrefix}/projects`.replace(/\/+/g, '/'), icon: 'folder' },
    { label: 'Writing', href: `${base}${langPrefix}/writing`.replace(/\/+/g, '/'), icon: 'document' },
    { label: 'Papers', href: `${base}${langPrefix}/papers`.replace(/\/+/g, '/'), icon: 'academic' },
  ],
  ar: [
    { label: 'الرئيسية', href: `${base}${langPrefix}/`.replace(/\/+/g, '/'), icon: 'home' },
    { label: 'قصتي', href: `${base}${langPrefix}/about`.replace(/\/+/g, '/'), icon: 'sparkles' },
    { label: 'الملفات الشخصية', href: `${base}${langPrefix}/profile`.replace(/\/+/g, '/'), icon: 'user' },
    { label: 'المشاريع', href: `${base}${langPrefix}/projects`.replace(/\/+/g, '/'), icon: 'folder' },
    { label: 'الكتابات', href: `${base}${langPrefix}/writing`.replace(/\/+/g, '/'), icon: 'document' },
    { label: 'الأوراق', href: `${base}${langPrefix}/papers`.replace(/\/+/g, '/'), icon: 'academic' },
  ],
};

const items = navItems[lang];
---

<nav class="navigation" role="navigation" aria-label="Main navigation">
  <div class="container">
    <div class="navigation__inner">
      <a href={`${base}${langPrefix}/`.replace(/\/+/g, '/')} class="navigation__logo">
        <img 
          src="/images/brand/nurtured-mind-logo.jpg" 
          alt={lang === 'ar' ? 'محور الرعاية' : 'Nurtured Hub'}
          width="40"
          height="40"
          class="navigation__logo-img"
        />
        <span class="navigation__logo-text">
          {lang === 'ar' ? 'محور الرعاية' : 'Nurtured Hub'}
        </span>
      </a>
      <ul class="navigation__list">
        {items.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={{
                active: currentPath === item.href || currentPath.startsWith(item.href + '/'),
              }}
            >
              <Icon name={item.icon} size={18} class="nav-icon" />
              <span>{item.label}</span>
            </a>
          </li>
        ))}
      </ul>
      <div class="navigation__actions">
        <LanguageSwitcher />
      </div>
    </div>
  </div>
</nav>

<style>
  .navigation {
    position: sticky;
    inset-block-start: 0;
    z-index: 100;
    background: rgba(250, 247, 242, 0.8);
    backdrop-filter: blur(10px);
    border-block-end: 1px solid rgba(0, 0, 0, 0.05);
  }

  .navigation__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-block: var(--space-3);
    gap: var(--space-4);
  }

  .navigation__logo {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 700;
    font-size: 1.25rem;
    text-decoration: none;
    flex-shrink: 0;
  }

  .navigation__logo-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    border-radius: var(--radius-md);
    display: block;
  }

  .navigation__logo-text {
    display: block;
  }

  @media (max-width: 768px) {
    .navigation__logo-text {
      display: none;
    }
    
    .navigation__logo-img {
      width: 32px;
      height: 32px;
    }
  }

  .navigation__list {
    display: flex;
    list-style: none;
    gap: var(--space-4);
    flex-wrap: wrap;
    flex: 1;
    justify-content: center;
  }

  .navigation__list a {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    text-decoration: none;
    font-weight: 500;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    transition: background-color var(--motion-duration-fast) var(--motion-easing);
  }

  .navigation__list .nav-icon {
    flex-shrink: 0;
    opacity: 0.7;
    transition: opacity var(--motion-duration-fast) var(--motion-easing);
  }

  .navigation__list a:hover .nav-icon,
  .navigation__list a.active .nav-icon {
    opacity: 1;
  }

  .navigation__list a:hover,
  .navigation__list a.active {
    background: var(--color-accent-4);
  }

  .navigation__actions {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .navigation__list {
      display: none;
    }

    .navigation__inner {
      justify-content: space-between;
    }
  }
</style>



