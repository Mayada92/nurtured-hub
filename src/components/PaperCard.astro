---
import type { CollectionEntry } from 'astro:content';
import { getImagePath } from '../utils/path';

interface Props {
  paper: CollectionEntry<'papers'>;
}

const { paper } = Astro.props;
const { data } = paper;
const isRTL = data.lang === 'ar';
const arrow = isRTL ? '←' : '→';
---

<article class="paper-card">
  {data.cover && (
    <div class="paper-card__cover">
      <img
        src={getImagePath(data.cover)}
        alt={`${data.title} - Cover image`}
        loading="lazy"
        width="600"
        height="300"
        decoding="async"
      />
    </div>
  )}
  <header>
    <h3>{data.title}</h3>
    <div class="paper-card__meta">
      <span class="venue">{data.venue}</span>
      <span class="year">{data.year}</span>
    </div>
  </header>
  <p class="paper-card__authors">
    {data.authors.join(data.lang === 'ar' ? '، ' : ', ')}
  </p>
  <footer class="paper-card__links">
    {data.pdf_url && (
      <a href={data.pdf_url} target="_blank" rel="noopener noreferrer" class="paper-link">
        {data.lang === 'ar' ? 'الورقة ←' : 'View Paper →'}
      </a>
    )}
    {data.doi && (
      <a href={data.doi.startsWith('http') ? data.doi : `https://doi.org/${data.doi}`} target="_blank" rel="noopener noreferrer" class="paper-link">
        DOI {arrow}
      </a>
    )}
  </footer>
</article>

<style>
  .paper-card {
    background: var(--gradient-card);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-card);
    transition: all var(--motion-duration-normal) var(--motion-easing-smooth);
    border: 1px solid rgba(0, 0, 0, 0.05);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
    margin-block-end: var(--space-3);
  }

  .paper-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-card-hover);
    border-color: rgba(234, 199, 199, 0.3);
  }

  .paper-card__cover {
    width: 100%;
    height: 120px;
    overflow: hidden;
    background: var(--gradient-section);
    flex-shrink: 0;
  }

  .paper-card__cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--motion-duration-slow) var(--motion-easing-smooth);
  }

  .paper-card:hover .paper-card__cover img {
    transform: scale(1.1);
  }

  .paper-card header {
    padding: var(--space-3);
    flex: 1;
  }

  .paper-card h3 {
    font-size: 0.7rem;
    font-weight: 600;
    line-height: 1.3;
    margin-block-end: var(--space-2);
  }

  .paper-card__meta {
    display: flex;
    gap: var(--space-2);
    align-items: center;
    margin-block-end: var(--space-1);
    flex-wrap: wrap;
  }

  .venue {
    font-weight: 500;
    color: var(--color-muted-ink);
    font-size: 0.56875rem;
  }

  .year {
    font-size: 0.525rem;
    color: var(--color-muted-ink);
    font-weight: 500;
  }

  .paper-card__authors {
    color: var(--color-muted-ink);
    font-size: 0.56875rem;
    margin-block: var(--space-2);
    padding: 0 var(--space-3);
    line-height: 1.4;
  }

  .paper-card__links {
    display: flex;
    gap: var(--space-3);
    padding: 0 var(--space-3) var(--space-3);
    margin-block-start: auto;
    flex-wrap: wrap;
  }

  .paper-card__links a {
    text-decoration: none;
    font-weight: 500;
    color: var(--color-accent-1);
    transition: color var(--motion-duration-fast) var(--motion-easing);
  }

  .paper-card__links a:hover {
    color: var(--color-accent-2);
  }
</style>



