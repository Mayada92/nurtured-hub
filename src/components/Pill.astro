---
interface Props {
  label: string;
  variant?: 'accent-1' | 'accent-2' | 'accent-3' | 'accent-4';
}

const { label, variant = 'accent-1' } = Astro.props;
const accentMap = {
  'accent-1': 'var(--color-accent-1)',
  'accent-2': 'var(--color-accent-2)',
  'accent-3': 'var(--color-accent-3)',
  'accent-4': 'var(--color-accent-4)',
};
const bgColor = accentMap[variant];
---

<span class="pill" style={`background-color: ${bgColor};`}>
  {label}
</span>

<style>
  .pill {
    display: inline-block;
    padding: var(--space-1) var(--space-3);
    border-radius: 9999px;
    font-size: 0.6125rem;
    font-weight: 400;
    line-height: 1.5;
  }
</style>



