---
interface Props {
  title: string;
  headline: string;
  focus: string;
}

const { title, headline, focus } = Astro.props;
---

<header class="profile-header">
  <h1>{title}</h1>
  <p class="profile-header__headline">{headline}</p>
  <button
    class="profile-header__print"
    onclick="window.print()"
    aria-label="Print this page as PDF"
  >
    Print PDF
  </button>
</header>

<style>
  .profile-header {
    margin-block-end: var(--space-6);
    padding-block-end: var(--space-4);
    border-block-end: 2px solid var(--color-accent-1);
  }

  .profile-header__headline {
    font-size: 1.25rem;
    color: var(--color-muted-ink);
    margin-block-end: var(--space-4);
  }

  .profile-header__print {
    padding: var(--space-2) var(--space-4);
    background: var(--color-accent-2);
    border: none;
    border-radius: var(--radius-md);
    font-weight: 500;
    cursor: pointer;
    transition: transform var(--motion-duration-fast) var(--motion-easing),
      background-color var(--motion-duration-fast) var(--motion-easing);
  }

  .profile-header__print:hover {
    transform: translateY(-1px);
    background: var(--color-accent-1);
  }

  .profile-header__print:focus-visible {
    outline: 2px solid var(--color-ink);
    outline-offset: 2px;
  }

  @media print {
    .profile-header__print {
      display: none;
    }
  }
</style>



