---
import { getRelativePath } from '../utils/path';

const currentPath = Astro.url.pathname;
const isArabic = currentPath.startsWith('/ar');
const alternateLang = isArabic ? 'en' : 'ar';
const alternatePath = getRelativePath(currentPath, alternateLang);
const currentLang = isArabic ? 'ar' : 'en';
const langLabels = {
  en: 'English',
  ar: 'العربية',
};
---

<nav class="language-switcher" aria-label="Language switcher">
  <a
    href={alternatePath}
    hreflang={alternateLang}
    lang={alternateLang}
    aria-label={`Switch to ${langLabels[alternateLang]}`}
  >
    <span aria-hidden="true">{alternateLang === 'ar' ? 'ع' : 'EN'}</span>
    <span class="sr-only">{langLabels[alternateLang]}</span>
  </a>
</nav>

<style>
  .language-switcher a {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    background: var(--color-accent-4);
    text-decoration: none;
    font-weight: 500;
    transition: transform var(--motion-duration-fast) var(--motion-easing),
      background-color var(--motion-duration-fast) var(--motion-easing);
  }

  .language-switcher a:hover {
    transform: translateY(-1px);
    background: var(--color-accent-3);
    opacity: 1;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>



