---
import LanguageSwitcher from './LanguageSwitcher.astro';
import { getLanguageFromPath, getBasePath } from '../utils/path';

const currentPath = Astro.url.pathname;
const lang = getLanguageFromPath(currentPath);
const base = getBasePath();
const langPrefix = lang === 'ar' ? '/ar' : '/en';

const footerLinks = {
  en: [
    { label: 'Home', href: `${base}${langPrefix}/`.replace(/\/+/g, '/') },
    { label: 'Projects', href: `${base}${langPrefix}/projects`.replace(/\/+/g, '/') },
    { label: 'Writing', href: `${base}${langPrefix}/writing`.replace(/\/+/g, '/') },
    { label: 'Papers', href: `${base}${langPrefix}/papers`.replace(/\/+/g, '/') },
    { label: 'Profiles', href: `${base}${langPrefix}/profile`.replace(/\/+/g, '/') },
    { label: 'About', href: `${base}${langPrefix}/about`.replace(/\/+/g, '/') },
    { label: 'Contact', href: `${base}${langPrefix}/contact`.replace(/\/+/g, '/') },
  ],
  ar: [
    { label: 'الرئيسية', href: `${base}${langPrefix}/`.replace(/\/+/g, '/') },
    { label: 'المشاريع', href: `${base}${langPrefix}/projects`.replace(/\/+/g, '/') },
    { label: 'الكتابات', href: `${base}${langPrefix}/writing`.replace(/\/+/g, '/') },
    { label: 'الأوراق', href: `${base}${langPrefix}/papers`.replace(/\/+/g, '/') },
    { label: 'الملفات الشخصية', href: `${base}${langPrefix}/profile`.replace(/\/+/g, '/') },
    { label: 'حولي', href: `${base}${langPrefix}/about`.replace(/\/+/g, '/') },
    { label: 'اتصل', href: `${base}${langPrefix}/contact`.replace(/\/+/g, '/') },
  ],
};

const links = footerLinks[lang];
---

<footer class="footer">
  <div class="container">
    <div class="footer__inner">
      <nav class="footer__nav" aria-label="Footer navigation">
        <ul class="footer__list">
          {links.map((link) => (
            <li>
              <a href={link.href}>{link.label}</a>
            </li>
          ))}
        </ul>
      </nav>
      <div class="footer__actions">
        <LanguageSwitcher />
      </div>
    </div>
    <p class="footer__copyright">
      © {new Date().getFullYear()} {lang === 'ar' ? 'العقل المربى' : 'Nurtured Mind'}
    </p>
  </div>
</footer>

<style>
  .footer {
    margin-block-start: var(--space-12);
    padding-block: var(--space-8);
    border-block-start: 1px solid rgba(0, 0, 0, 0.08);
    background: linear-gradient(to top, rgba(255, 255, 255, 0.3) 0%, transparent 100%);
  }

  .footer__inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-block-end: var(--space-4);
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .footer__list {
    display: flex;
    list-style: none;
    gap: var(--space-2);
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
  }

  .footer__list li {
    margin: 0;
  }

  .footer__list a {
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-ink);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    transition: all var(--motion-duration-fast) var(--motion-easing);
    display: inline-block;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .footer__list a:hover {
    background: rgba(255, 255, 255, 0.9);
    color: var(--color-accent-1);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-color: rgba(234, 199, 199, 0.3);
  }

  .footer__copyright {
    text-align: center;
    font-size: 0.7rem;
    color: var(--color-muted-ink);
    margin-block-start: var(--space-6);
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(8px);
    border-radius: var(--radius-md);
  }
</style>



